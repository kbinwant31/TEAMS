<body>
  <div class="container">
  <!--Pop up form for username-->
  <div id="myModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content" style="color: #595959;">
        <div class="modal-header">
          <h5 class="modal-title ">Welcome!</h5>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <p style="font-weight: 100;">Please enter your name and start chatting!</p>
          <form id="newform">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Name" id="username" minlength="1">
            </div>
            <button type="submit" class="btn btn-primary" id="submit" style="background-color: #2196F3;border-color: #2e6da4;">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="notif" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content" style="color: #595959;">
        <div class="modal-header">
          <h4 class="modal-title">Hello!</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          
        </div>
        <div class="modal-body">
          <p style="font-weight: 100;"> <span id="welcome" style="font-weight: bold;"> </span>, 
          Invite your friends and chat!
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  </div>
  <!--End of modal form-->
  </div>
  <!--Start of layout-->
  <div class="layout">
  <!-- Start of Navigation -->
  <div class="navigation">
    <div class="container">
      <div class="inside">
        <div class="nav nav-tab menu">
          <button class="btn nav-profile"><i class="material-icons">account_circle</i></button>
          <a href="chat.html"><i class="material-icons">chat_bubble_outline</i></a>
          <a href="video.html"  class="f-grow1 active"class="active"><span class="material-icons active">videocam</span></a>
          <a href="video.html"><button href="video.html" class="btn power" ><i class="material-icons">power_settings_new</i></button></a>
        </div>
      </div>
    </div>
  </div>
  <!-- End of Navigation -->

    <div class="main">
      <div class="main_left">
        <div id="main_videos" >
          <div id="video-grid" class="container-fluid userVideo">
            <!--Videos will be added here-->
            
          </div>
          <div id="myVideo" class="myVideo">
            <!--My video will be added here-->
          </div>
        </div>
        <div class="main_controls">
          <div class="main_controls_block">
            <div onclick="muteUnmute()" class="main_controls_button main_mute_button">
              <span class="material-icons">mic</span>
           </div>
           <div onclick="playStop()" class="main_controls_button main_video_button" >
            <span class="material-icons">videocam</span>
           </div>
          </div>
          <div class="main_controls_block">
            <div class="main_controls_button ">
              <a id="invite-button" title="Invite Friends">
              <span class="material-icons add_btn">person_add</span></a>
            </div>
            <div class="main_controls_button">
              <a id="chat-button" title="Chat" onclick="showChat()">
              <span class="material-icons chat_btn">chat</span></a>
            </div>
          </div>
          <div class="main_controls_block">
            <div class="main_controls_button" id="end-button">
              <span class="leave_meeting" style="font-size: 14px;">Leave Meeting</span>
            </div>
         </div>
        </div>
      </div>

      <div id="chat" >
        <div class="main_right" style="max-width: 280px;">
          <h5 class="main_header">CHAT</h5>
          <div class="main_chat_window">
            <ul class="messages">
            </ul>

          </div>
          <div class="main_message_container">
            <input id="chat_message" type="text" placeholder="Type message here..." class="focus-visible" >
          </div>
        </div>
      </div>

    </div><!--End of main-->
  </div><!--layout-->

  <script>
    function showChat() {
      var x = document.getElementById("chat");
      if (x.style.display === "none") {
        x.style.display = "block";
      } else {
        x.style.display = "none";
      }
    }
  </script>
  
